<body>
    <!-- cut here -->
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand"> Rita's Coffee Shop </a>
    </nav>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>First My Coffee!</h1>
            <p>emmmmmmm</p>
        </div>
    </div>
    <!-- cut here -->
    <!-- % include partials_header %>  -->
<!-- i will take this later, it is just to show that i can obtain the data from database, but not the json and values -->
    <pre>
        <%= coffeeItems %>
    </pre>

    <!-- div container that contains the table -->
    <div class="container">
        <p>Hi!! my new coffee app!!</p>
        <div class="row">
            <!-- Form -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <!-- onces i click the Add button in the form, it will send an event to the server, get or post methods, listening to a specific route -->
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="Name" placeholder="Insert a new Name" class="form-control"
                                    autofocus>
                            </div>
                            <div class="form-group">
                                <input type="text" name="Size" id="" cols="80" placeholder="Insert a new Size"
                                    class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="Price" id="" cols="80" placeholder="Insert a new Price"
                                    class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Add
                            </button>

                        </form>
                    </div>
                </div>
            </div>
            <!-- LIST!! -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>N*</th>
                            <th>Name</th>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i < coffeeItems.length; i++) { %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>
                                <td>
                                    <%= coffeeItems[i].Name %>
                                </td>
                                <td>
                                    <%= coffeeItems[i].Size %>
                                </td>
                                <td>
                                    <%= coffeeItems[i].Price %>
                                </td>
                                <td>
                                    <a href="/seasonal/<%= coffeeItems[i]._id %>"
                                        class="btn <%= coffeeItems[i].status ? 'btn-primary' : 'btn-dark' %>">Seasonal</a>
                                    <a href="/delete/<%= coffeeItems[i]._id %>" class="btn btn-danger">Delete</a>
                                    <a href="/edit/<%= coffeeItems[i]._id %>" class="btn btn-info">Edit</a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- this div down, closes and contains the table -->
    </div>

