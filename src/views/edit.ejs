    <div class="container">
        <div class="row">
            <!-- Form -->
            <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <!-- onces i click the Add button in the form, it will send an event to the server, get or post methods, listening to a specific route -->
                        <form action="/update/<%= coffeeItems._id %> " method="POST">
                            <div class="form-group">
                                <input type="text" name="Name" placeholder="Insert new Name" class="form-control"
                                    autofocus value="<%= coffeeItems.name %>">
                            </div>
                            <div class="form-group">
                                <input type="text" name="Size" id="" cols="80" placeholder="Insert new Size"
                                    class="form-control" value="<%= coffeeItems.size %>">
                            </div>
                            <div class="form-group">
                                <input type="text" name="Price" id="" cols="80" placeholder="Insert new Price"
                                    class="form-control" value="<%= coffeeItems.price %>">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Update
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
