                    <a class="btn btn-light btn-xl js-scroll-trigger mt-1 mb-5" role="button" href="#form-group">Get started!</a>
                </div>
            </div>
        </div>
    </section> 
    </div>
    


    <!-- seccion del area naranja -->
    <!-- div container that contains the table -->
    <div class="container mt-5 mb-5">
        <p>Hi!! my new coffee app!!</p>
        <%= coffeeItems %> 

        <div class="row">
            <!-- Form -->
            <div class="col-md-5 mb-5">
                <div class="card" style="border-width: 10px; margin-bottom: 20px;">
                    <div class="card-body">
                        <!-- onces i click the Add button in the form, it will send an event to the server, get or post methods, listening to a specific route -->
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="Name" placeholder="Insert a new Name" class="form-control"
                                    autofocus>
                            </div>
                            <div class="form-group">
                                <input type="text" name="Size" id="" cols="80" placeholder="Insert a new Size"
                                    class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="Price" id="" cols="80" placeholder="Insert a new Price"
                                    class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Add
                            </button>

                        </form>
                    </div>
                </div>
            </div>
            <!-- LIST!! -->
            <div class="col-md-7 mb-5">
                <div class="card" style="border-width: 10px; margin-bottom: 20px;">
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>N*</th>
                                    <th>Name</th>
                                    <th>Size</th>
                                    <th>Price</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (var i=0; i < coffeeItems.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <%= coffeeItems[i].Name %>
                                        </td>
                                        <td>
                                            <%= coffeeItems[i].Size %>
                                        </td>
                                        <td>
                                            <%= coffeeItems[i].Price %>
                                        </td>
                                        <td>
                                            <a href="/seasonal/<%= coffeeItems[i]._id %>"
                                                class="btn <%= coffeeItems[i].status ? 'btn btn-success' : 'btn-dark' %>">Seasonal</a>
                                            <a href="/delete/<%= coffeeItems[i]._id %>"
                                                class="btn btn-danger">Delete</a>
                                            <a href="/edit/<%= coffeeItems[i]._id %>" class="btn btn-primary">Edit</a>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- this div down, closes and contains the table -->
    </div>
